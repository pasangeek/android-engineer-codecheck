<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="detailsVM"
            type="jp.co.yumemi.android.code_check.ui.details.RepositoryDetailViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_color">


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/backButton"
            android:contentDescription="@string/navigate_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            app:backgroundTint="@color/colorPrimaryDark"
            app:fabSize="mini"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:maxImageSize="20dp"
            app:srcCompat="@drawable/ic_baseline_arrow_back_24"
            app:tint="#FFFFFF"
            android:focusable="true" />


        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/border"
                android:gravity="center|top"
                android:orientation="vertical"

                app:backgroundTint="@color/colorPrimaryDark">

                <androidx.cardview.widget.CardView
                    android:id="@+id/view2"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="20dp"
                    android:elevation="12dp"
                    app:cardCornerRadius="100dp">

                    <ImageView
                        android:id="@+id/ownerIconView"
                        android:contentDescription="@string/owner_s_profile_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:background="@drawable/ic_user"
                        android:scaleType="centerCrop" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/nameView"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@{detailsVM.gitHubRepositoryDetails.name}" />


                <TextView
                    android:id="@+id/languageView"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="@{String.format(@string/written_language,detailsVM.gitHubRepositoryDetails.language)}" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:baselineAligned="false"
                android:orientation="horizontal"
                app:backgroundTint="@color/colorPrimaryDark">

                <LinearLayout
                    android:id="@+id/stars_count_box"
                    android:layout_width="110dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp"

                    android:textAllCaps="false">

                    <TextView
                        android:id="@+id/starsView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="12dp"
                        android:text="@{String.format(@string/stars_count,detailsVM.gitHubRepositoryDetails.stargazersCount)}" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/watchers_count_box"
                    android:layout_width="110dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp"

                    android:textAllCaps="false">

                    <TextView
                        android:id="@+id/watchersView"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@{String.format(@string/watchers_count,detailsVM.gitHubRepositoryDetails.watchersCount)}" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/forks_count_box"
                    android:layout_width="110dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:textAllCaps="false">

                    <TextView
                        android:id="@+id/forksView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="12dp"
                        android:text="@{String.format(@string/forks_count,detailsVM.gitHubRepositoryDetails.forksCount)}" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/openIssuesView"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:background="@drawable/border"
                    android:text="@{String.format(@string/open_issues_count,detailsVM.gitHubRepositoryDetails.openIssuesCount)}" />


            </LinearLayout>


        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>